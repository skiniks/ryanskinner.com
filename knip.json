    "src/app/**/*.{ts,tsx}",
    "src/components/**/*.{ts,tsx}",
    "src/lib/**/*.{ts,tsx}",
    "vite.config.ts"
  ],
  "project": [
    "src/**/*.{ts,tsx}",
    "public/**/*.{md,mdx}"
